<section class="single">
<div data-hook="product_show" itemscope itemtype="http://schema.org/Product">
  <% @body_id = 'product-details' %>
	<div class="row">
		<header class="span12 prime">
			<h3><h3 class="product-title" itemprop="name"><%= accurate_title %></h3>
		</header>
	</div>

	<div class="row">
		<div class="span4">
			<!-- Product Images -->
			<div class="wrap">
        <div id="product-images" data-hook="product_images">
          <div id="main-image" data-hook>
            <%= render :partial => 'image' %>
          </div>
          <div id="thumbnails" data-hook>
            <%= render :partial => 'thumbnails' %>
          </div>
        </div>

        <div data-hook="product_properties">
          <%= render :partial => 'properties' %>
        </div>

        <div data-hook="promotions">
          <%= render :partial => 'promotions' %>
        </div>
      </div>
    </div>
    <div class="span8 omega" data-hook="product_right_part">
      <div class="details wrapper" data-hook="product_right_part_wrap">

        <div id="product-description" data-hook="product_description">
          <div class="accordion" id="accordion2">
				    <div class="accordion-group">
				      <div class="accordion-heading">
				        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#description">
				          <i class="icon-layout theme"></i>Description
				        </a>
				      </div>
				      <div id="description" class="accordion-body collapse">
				        <div class="accordion-inner">
				          <%= product_description(@product) rescue Spree.t(:product_has_no_description) %>
				        </div>
				      </div>
				    </div>
				  </div>
          <div id="cart-form" data-hook="cart_form">
            <%= render :partial => 'cart_form' %>
          </div>
        </div>
        <hr/>

        <%= render :partial => 'taxons' %>
      </div>
    </div>
  </div>
</div>

