<footer id="footer">
	<div class="container">
		<section class="row foot">
			<article class="span4">
				<strong>Quick Links</strong>
  			<ul>
				  <%= render :partial => "spree/static_content/static_content_list", :collection => Spree::Page.visible.footer_links, :as => :page %>
					<li><%= link_to "Contact Us", spree.contact_path %></li>
				</ul>
			</article>
			<article class="span4">
				<strong>News</strong>
				<ul>
				  <% Monologue::Post.published.limit(3).each do |post| %>
				    <li>
					    <%= link_to post.title, post.full_url%>
					    <br />
					    <small>posted on <%= I18n.localize(post.published_at.to_date, format: :long) %></small>
				    </li>
			    <%end%>
				</ul>
			</article>
			<%#--article class="span3">
				<strong>Tweets</strong>
				<div id="tweet"></div>
			</article%>
			<article class="span4">
			  <%#
				<strong>Newsletter</strong>
				<div>
					<form class="form-inline">
					<input class="input-medium" type="text" placeholder="Email address">
					<button class="btn"><i class="icon-direction"></i></button>
					</form>
				</div>%>
				<address class="row-fluid">
					<div class="pull-left clabel"><i class="icon-location"></i></div>
					<div class="pull-left cdata">1909 University Blvd, Anderson IN 46012</div>
				</address>
				<address class="row-fluid">
					<div class="pull-left clabel"><i class="icon-phone"></i></div>
					<div class="pull-left cdata">765.356.4122</div>
				</address>
			</article>
		</section>

	</div>
	<section class="row-fluid doubleline">
		<div class="container">
			<div class="span6">
				<div class="payment mastercard"></div>
				<div class="payment visa"></div>
				<div class="payment discover"></div>
				<div class="payment paypal"></div>
				<%#
